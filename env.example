# BTC Trading System Environment Variables
# Copy this file to .env and fill in your actual API keys

# OKX Exchange API Keys
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_passphrase_here

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.siliconflow.cn/v1
DEEPSEEK_MODEL=deepseek-ai/DeepSeek-R1

# Twitter API (if needed in the future)
TWITTER_RAPIDAPI_KEY=your_twitter_rapidapi_key_here
TWITTER_RAPIDAPI_HOST=twitter154.p.rapidapi.com

# Email Notification Configuration
EMAIL_ENABLED=true
EMAIL_SMTP_SERVER=smtp.qq.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=your_email@qq.com
EMAIL_TO=your_email@qq.com
EMAIL_AUTH_CODE=qlyoeszgeastbidh
EMAIL_USE_TLS=true

# Proxy Configuration (optional)
PROXY_URL=http://127.0.0.1:7890

# Demo Mode (set to true for testing, false for live trading)
DEMO_MODE=true 